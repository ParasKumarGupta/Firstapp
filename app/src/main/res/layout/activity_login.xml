<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:padding="16dp"
    tools:context=".login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="160dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_baseline_account_circle_24" />

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/img1"
            android:layout_alignTop="@+id/img1"
            android:layout_below="@id/img1"
            android:text="Username"
            android:textSize="28dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/teal_200" />


        <EditText
            android:id="@+id/edt_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your username"
            android:layout_below="@id/name"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/edt_name1"
            android:src="@drawable/ic_baseline_verified_user_24" />

        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_below="@id/edt_name1"
            android:layout_toRightOf="@+id/img2"
            android:text="Password"
            android:textSize="28dp"
            android:textColor="@color/colorPrimaryDark"
            android:textColorHint="@color/teal_200"
            tools:ignore="HardcodedText" />


        <EditText
            android:id="@+id/edt_password1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Enter you Password"
            android:layout_below="@+id/pass"
            android:inputType="textPassword"
            android:maxLines="1"
            android:singleLine="true"/>

        <ImageButton
            android:id="@+id/btn_Submit1"
            android:layout_width="match_parent"
            android:layout_below="@id/edt_password1"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_login_24"
            android:background="#480897"
            android:text="Login"
            android:textColor="#FAF6F6"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_Submit2"
            android:layout_width="match_parent"
            android:layout_below="@id/btn_Submit1"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="#480897"
            android:text="List"
            android:textColor="#FAF6F6"
            android:textSize="16sp"/>
        <Button
            android:id="@+id/btn_Submit3"
            android:layout_width="match_parent"
            android:layout_below="@id/btn_Submit2"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:background="#480897"
            android:text="Pop Up Menu"
            android:textColor="#FAF6F6"
            android:textSize="16sp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnalarm"
            android:layout_below="@id/btn_Submit3"
            android:layout_margin="20dp"
            android:text="Alarm" />



        <TextView
            android:id="@+id/txt_output1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/purple_200"
            android:textSize="16sp" />

    </RelativeLayout>


</androidx.core.widget.NestedScrollView>